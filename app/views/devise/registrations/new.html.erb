<div class="container_24">
    <div class="grid_24">
        
        <h2>Sign up</h2>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          
          <table class="form">
            <tr>
                <th><%= f.label :sex, "Geschlecht" %></th>
                <td><%= f.select :sex, Person::GENDERS.map{ |x| [t(x),x] }, :include_blank => true %></td>
            </tr>
            <tr>
                <th><%= f.label :first_name, "Vorname" %></th>
                <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
                <th><%= f.label :name, "Name" %></th>
                <td><%= f.text_field :name %></td>
            </tr>
            <tr>
                <th><%= f.label :birthday, "Geburtstag" %></th>
                <td class="date"><%= f.text_field :birthday %></td>
            </tr>
            <tr>
                <th><%= f.label :proffession, "aktueller Beruf" %></th>
                <td><%= f.text_field :proffession %></td>
            </tr>
            
            <tr>
                <th><%= f.label :email, "E-Mail" %></th>
                <td><%= f.email_field :email %></td>
            </tr>
            <tr>
                <th><%= f.label :password %></th>
                <td><%= f.password_field :password %></td>
            </tr>
            <tr>
                <th><%= f.label :password_confirmation %></th>
                <td><%= f.password_field :password_confirmation %></td>
            </tr>
          </table>

          <div><%= f.submit "Sign up" %></div>
        <% end %>

<br/>
        <%= render "devise/shared/links" %>

    </div>
</div>