<%= form_for [@person,@service] do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <table class="form">
    <tr>
        <th><%= f.label :name %></th>
        <td><%= f.text_field :name %></td>
    </tr>
    <tr>
        <th><%= f.label :level, "Niveau" %></th>
        <td><%= f.text_field :level %></td>
    </tr>
    <tr>
        <th><%= f.label :experience, "Erfahrung" %></th>
        <td><%= f.text_field :experience %></td>
    </tr>
    <tr>
        <th><%= f.label :certificate, "Zertifikate" %></th>
        <td><%= f.text_field :certificate %></td>
    </tr>
    <tr>
        <th><%= f.label :software %></th>
        <td><%= f.text_field :software %></td>
    </tr>
    <tr>
        <th><%= f.label :hardware %></th>
        <td><%= f.text_field :hardware %></td>
    </tr>
    <tr>
        <th><%= f.label :price %></th>
        <td><%= f.text_field :price %></td>
    </tr>
  </table>
  <%= f.hidden_field :person_id, :value => @person.id %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
