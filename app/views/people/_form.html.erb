      </tr>
      <tr>
          <th><%= f.label :birthday %></th>
          <td><%= f.date_select :birthday %></td>
      </tr>
      <tr>
          <th><%= f.label :proffession %></th>
          <td><%= f.text_field :proffession %></td>
