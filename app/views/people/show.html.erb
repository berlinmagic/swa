                            <%= image_tag "marco_50.png" %>
                        </div>
                        <div class="data">
                            <strong><%= @person.full_name %></strong><br/>
                                Bornholmer Str. 9a <br/>
                                10409 Berlin <br/>
                                Deutschland
                        </div>
                    <% end %>
                </div>
                <div class="address_box">
                    <div class="pic">
                        <%= image_tag "owerk_50.png" %>
                    </div>
                    <div class="data">
                        <strong>orangenwerk</strong><br/>
