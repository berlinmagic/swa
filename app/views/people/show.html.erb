<%= render "shared/user_nav", :person => @person %>

<div class="container_24">
    
    <div class="grid_6">
        <ul id="aside_nav">
            <li><%= link_to "Allgemeine Informationen", '#', :class => "aktiv" %></li>
            <li><%= link_to "Ausbildung & Arbeit", '#'%></li>
            <li><%= link_to "Lebenslauf", '#'%></li>
            <li><%= link_to "bearbeiten", edit_person_path(@person), :class => "dialog", :title => "Profil bearbeiten" %></li>
        </ul>
    </div>
    
    <div class="grid_18">
        
        <div class="market_box">
            <div class="box_header">
                Allgemeine Informationen
            </div>
            <table class="market">
                <% if @person.sex && !@person.sex.blank? %>
                    <tr>
                        <th>Geschlecht</th>
                        <td><%= t(@person.sex) %></td>
                    </tr>
                <% end %>
                <% if @person.birthday && !@person.birthday.blank? %>
                    <tr>
                        <th>Geburtstag</th>
                        <td><%= l @person.birthday %></td>
                    </tr>
                <% end %>
                <% if @person.nick_name && !@person.nick_name.blank? %>
                    <tr>
                        <th>Spitzname</th>
                        <td><%= @person.nick_name %></td>
                    </tr>
                <% end %>
            </table>
        </div>
        
        <div class="market_box">
            <div class="box_header">
