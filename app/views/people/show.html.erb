            <div class="box_header">
                Adressdaten
            </div>
            <div class="half_box">
                <div class="address_box">
                    <% if @person.full_name == "Torsten Wetzel" %>
                        <div class="pic">
                            <%= image_tag "torsten_50.png" %>
                        </div>
                        <div class="data">
                            <strong><%= @person.full_name %></strong><br/>
                                Heinz-Kapelle-Str. 6 <br/>
                                10407 Berlin <br/>
                                Deutschland
                        </div>
                    <% elsif @person.full_name == "Marco Sebald" %>
